page {
  background: #fff;
  font-size: 30rpx;
}
#getUserInfo {
  display: hidden;
}

.banner {
  width: 100%;
  height: 342rpx;
}

input {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
}

.register-phone {
  margin: 30rpx 40rpx 60rpx 40rpx;
  line-height: 96rpx;
  border-bottom: 1px solid var(--lightgray);
}
.a-arrow.right {
  margin: 0 24rpx 0 8rpx;
}

.code-area {
  position: relative;
  margin: 0 40rpx;
  border-bottom: 1px solid var(--lightgray);
}
.code-text {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  z-index: 9;

  padding: 40rpx 0;
  color: #b2cabd;
}

.register-button {
  margin: 160rpx auto 0 auto;
  width: 90%;
  line-height: 80rpx;
  border-radius: 80rpx;
  color: #fff;
  background: var(--green);
}

.tips {
  padding: 24rpx 40rpx;
  color: #dbe486;
}
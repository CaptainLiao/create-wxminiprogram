<view class="a-modal" bindtap='tapCloseQrcode' catchtouchmove>
  <view class="a-modal-content">
    <view class="a-modal-title fx-row fx-m-between">
      <view class="text-32 green">title</view>
    </view>
    <canvas class="barcode" canvas-id='barcode'></canvas>

    <canvas class="qrcode-canvas" 
      canvas-id="qrcode"
      style="width: {{qrcodewidth}}px; height: {{qrcodewidth}}px;">
    </canvas>

    <view class="a-modal-foot text-center text-28 black">扫码使用优惠券</view>
  </view>
</view>



.a-modal.hidden,
.a-modal-content.hidden {
  left: -120vw;
}

.a-modal-content{
  width: 90%;
  padding: 40rpx 0;
  border-radius: 12rpx;
  background-color: #fff;
}
.a-modal-title {
  padding: 0 40rpx 40rpx 40rpx;
}
.a-modal-foot {
  margin-top: 60rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
}
.a-modal-logo {
  width: 54rpx;
  height: 54rpx;
}

.qrcode-canvas {
  position: relative;
  margin: 0 auto;
}
.qrcode-logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;

  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 100rpx;
}

.barcode {
  margin: 0 auto;
  width: 600rpx;
  height: 220rpx;
